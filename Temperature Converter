temp = float(input("Enter temperature: "))
metric = str(input("Enter C for celsius or F for Fahrenheit: "))

if metric == "C":
    cf = (temp * 1.8) + 32
    print(f"The temperature is Fahrenheit is {cf}")
if metric == "F":
    fc = (temp - 32) * 5/9
    print(f"The temperature in Celsius is {fc}")
